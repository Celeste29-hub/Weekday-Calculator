<script type=text/javascript>
document.getElementById("text1")
document.getElementById("text2")
document.getElementById("text3")
document.getElementById("Display")
function date(mm, dd, yyyy) {
try {
x = String(Math.abs(parseInt(yyyy)))
boolean = Number.isInteger(parseInt(x))
} catch(err) {
boolean = false
}
if (Number.isInteger(mm) && Number.isInteger(dd) && boolean) {
month = parseInt(mm)
day = parseInt(dd)
year = parseInt(yyyy)
ly = 0
if (year == 0) {
return "Year 0 does not exist"
fail;
}
else if (year < 0) {
year += 1
}
if (day < 1) {
result = "Invalid Date"
}
else {
month_name = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
months = [0, 31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31]
if ((year  % 4 + 4) % 4 == 0 && (year % 100 + 100) % 100 != 0 || (year % 400 + 400) % 400 == 0) {
months[2] = 29
}
count = 0
for (i = 0; i  < month; i++) {
count += months[i]
}
year -= 1
days = year * 365 + Math.floor(year / 4) - Math.floor( year / 100) + Math.floor(year / 400)
num = ((count + day + days) % 7 + 7) % 7
weekday = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"]
if (year >= 0) {
correct_year = String(year + 1) + "CE"
}
else {
correct_year = String(Math.abs(year)) + "BCE"
}
if (months.includes(29)) {
leap_year = "It is a leap year."
ly = 1
}
else {
leap_year = "It is not a leap year."
}
if (day <= months[month]) {
result = month_name[month - 1] + " " + String(day) + " " + correct_year + " is a " + weekday[num] + ".\nIt is week " + String(Math.ceil(day / 7)) + " of " + month_name[month - 1] + ".\nIt is day " + String(count + day) + " with " + String(365 + ly - (count + day)) + " days left in the year.\n" + leap_year
}
else {
result = "Invalid date"
}
}
}
else {
result = "Check input value"
}
return result
}
text1.onkeyup = function() {
m = text1.value
m = m.slice(0, 2)
m = parseInt(m)
if (m > 12) {
  m = ""
}
text1.value = m
m = parseInt(m)
}
text2.onkeyup = function() {
d = text2.value
d = d.slice(0, 2)
d = parseInt(d)
if (d > 31) {
  d = ""
}
text2.value = d
d = parseInt(d)
}
text3.onkeyup = function() {
y = text3.value
y = y.slice(0, 16)
y = parseInt(y)
text3.value = y
}
CE.onclick = function() {
m = parseInt(text1.value)
d = parseInt(text2.value)
y = parseInt(text3.value)
Display.innerHTML = date(m, d, y)
}
BCE.onclick = function() {
m = parseInt(text1.value)
d = parseInt(text2.value)
y = parseInt(text3.value)
Display.innerHTML = date(m, d, 0 - y)
}
Reset.onclick = function() {
Display.innerHTML = ""
}
</script>
